{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	Connexion
								    -														-
	{{ parent () }}
{% endblock %}

{% block body %}
	{% if error %}
		<div class="w-50 mx-auto alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path('app_login') }}" method="post" class="w-50 mx-auto">
		<div class="mb-3">
			<label for="username">Votre email :</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
		</div>
		<div class="mb-3">
			<label for="password">Mot de passe :</label>
			<input type="password" id="password" name="_password" class="form-control">
		</div>

		<div>
			<a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
		</div>

		{# If you want to control the URL the user is redirected to on success (more details below)
		            <input type="hidden" name="_target_path" value="/account"> #}
		<div class="text-center">
			<button class="btn btn-primary" type="submit">Se connecter</button>
		</div>
	</form>
{% endblock %}
